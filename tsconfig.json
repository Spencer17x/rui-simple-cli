{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "@types/**/*",
    "src/**/*"
  ]
}