{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "@types/**/*",
    "src/**/*"
  ]
}